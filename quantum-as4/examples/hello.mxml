<?xml version="1.0"?>
<Application
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Hello World - ActionScript 4">

    <fx:Script>
        <![CDATA[
            [Bindable]
            private var message:String = "Hello, ActionScript 4!";

            [Bindable]
            private var clickCount:int = 0;

            private function handleClick():void {
                clickCount = clickCount + 1;
                message = "You clicked " + clickCount + " times!";
            }

            private function handleReset():void {
                clickCount = 0;
                message = "Hello, ActionScript 4!";
            }
        ]]>
    </fx:Script>

    <fx:Style>
        .quantum-application {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            min-height: 100vh;
        }

        .quantum-vbox {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .title {
            font-size: 32px;
            font-weight: bold;
            color: #333;
        }

        .subtitle {
            font-size: 18px;
            color: #666;
        }

        .quantum-button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .quantum-button:hover {
            background-color: #2980b9;
        }

        .quantum-button:disabled {
            background-color: #95a5a6;
            cursor: not-allowed;
        }

        .reset-button {
            background-color: #e74c3c;
        }

        .reset-button:hover {
            background-color: #c0392b;
        }
    </fx:Style>

    <s:VBox padding="40" gap="20" width="600">

        <s:Label text="ActionScript 4 + MXML" styleName="title"/>

        <s:Label text="{message}" styleName="subtitle"/>

        <s:HBox gap="10">
            <s:Button
                label="Click Me!"
                click="handleClick()"/>

            <s:Button
                label="Reset"
                styleName="reset-button"
                click="handleReset()"/>
        </s:HBox>

        <s:Panel title="Info">
            <s:VBox padding="15" gap="10">
                <s:Label text="This is a demo of:"/>
                <s:Label text="• MXML declarative UI"/>
                <s:Label text="• ActionScript 4 event handlers"/>
                <s:Label text="• Data binding with {curly braces}"/>
                <s:Label text="• CSS styling"/>
                <s:Label text="• Flex Spark components"/>
            </s:VBox>
        </s:Panel>

    </s:VBox>

</Application>
