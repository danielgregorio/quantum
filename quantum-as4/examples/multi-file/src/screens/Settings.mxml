<?xml version="1.0"?>
<Screen
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Script>
        <![CDATA[
            [Bindable]
            private var appName:String = "User Management";

            [Bindable]
            private var version:String = "1.0.0";

            private function saveSettings():void {
                trace("Settings saved!");
            }
        ]]>
    </fx:Script>

    <s:VBox width="100%" height="100%" gap="20">
        <s:Label text="Settings" fontSize="28" fontWeight="bold"/>

        <s:VBox gap="15" width="400">
            <s:Label text="Application Name"/>
            <s:TextInput text="{appName}" width="100%"/>

            <s:Label text="Version"/>
            <s:TextInput text="{version}" width="100%" enabled="false"/>

            <s:Button
                label="Save Settings"
                click="saveSettings()"
                width="150"/>
        </s:VBox>
    </s:VBox>

</Screen>
