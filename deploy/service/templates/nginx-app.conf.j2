# Quantum App: {{ app_name }}
# Generated by Quantum Deploy Service at {{ timestamp }}
# DO NOT EDIT MANUALLY - changes will be overwritten

location /{{ app_name }}/ {
    # Proxy to container
    proxy_pass http://{{ container_name }}:{{ port }}/;
    proxy_http_version 1.1;

    # Preserve original request info
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Prefix /{{ app_name }};

    # WebSocket support (for hot reload, real-time features)
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    # Timeouts
    proxy_connect_timeout {{ connect_timeout | default('60s') }};
    proxy_send_timeout {{ send_timeout | default('60s') }};
    proxy_read_timeout {{ read_timeout | default('60s') }};

    # Buffering
    proxy_buffering on;
    proxy_buffer_size {{ buffer_size | default('4k') }};
    proxy_buffers {{ buffers | default('8 4k') }};

    # Request size limits
    client_max_body_size {{ max_body_size | default('16m') }};

    # Error handling - show friendly error page
    proxy_intercept_errors on;
    error_page 502 503 504 /quantum_error.html;

    {% if rate_limit %}
    # Rate limiting
    limit_req zone={{ app_name }}_zone burst={{ rate_limit_burst | default(20) }} nodelay;
    {% endif %}

    {% if cache_enabled %}
    # Caching
    proxy_cache quantum_cache;
    proxy_cache_valid 200 {{ cache_ttl | default('5m') }};
    proxy_cache_key "$scheme$request_method$host$request_uri";
    add_header X-Cache-Status $upstream_cache_status;
    {% endif %}

    {% if cors_enabled %}
    # CORS headers
    add_header 'Access-Control-Allow-Origin' '{{ cors_origin | default("*") }}' always;
    add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
    add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With' always;

    if ($request_method = 'OPTIONS') {
        return 204;
    }
    {% endif %}
}

{% if health_check %}
# Health check endpoint (bypasses app)
location /{{ app_name }}/_health {
    proxy_pass http://{{ container_name }}:{{ port }}/health;
    proxy_connect_timeout 5s;
    proxy_read_timeout 5s;
    access_log off;
}
{% endif %}
