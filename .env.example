# Quantum Admin Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Application
# ============================================================================
QUANTUM_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# Server
# ============================================================================
WEB_PORT=8000
MAX_WORKERS=4
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# ============================================================================
# Database
# ============================================================================
POSTGRES_USER=quantum
POSTGRES_PASSWORD=quantum_dev
POSTGRES_DB=quantum
POSTGRES_PORT=5432
DATABASE_URL=postgresql://quantum:quantum_dev@localhost:5432/quantum

# ============================================================================
# Redis
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=quantum:

# ============================================================================
# Celery
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKERS=4

# ============================================================================
# Webhooks
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret-here
AUTO_DEPLOY_BRANCHES=main,staging,develop
DEPLOYMENT_DIR=/opt/quantum

# ============================================================================
# Email (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# Monitoring
# ============================================================================
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================================================
# Flower (Celery Monitoring)
# ============================================================================
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ============================================================================
# Nginx (Production)
# ============================================================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================================================
# Docker Hub (CI/CD)
# ============================================================================
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# ============================================================================
# Deployment Servers (CI/CD)
# ============================================================================
DEV_HOST=dev.example.com
DEV_USERNAME=deploy
# DEV_SSH_KEY stored in GitHub Secrets

STAGING_HOST=staging.example.com
STAGING_USERNAME=deploy
# STAGING_SSH_KEY stored in GitHub Secrets

PROD_HOST=prod.example.com
PROD_USERNAME=deploy
# PROD_SSH_KEY stored in GitHub Secrets

# ============================================================================
# Slack Notifications (CI/CD)
# ============================================================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
