# Quantum Framework Environment Variables
# Copy this file to .env and customize for your environment

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port (default: 8080)
QUANTUM_PORT=8080

# Server host (default: 0.0.0.0)
QUANTUM_HOST=0.0.0.0

# Debug mode (default: false)
QUANTUM_DEBUG=false

# Environment (development, staging, production)
QUANTUM_ENV=development

# ===========================================
# DATABASE (via Quantum Admin)
# ===========================================

# Quantum Admin API URL
QUANTUM_ADMIN_API=http://localhost:8000/api

# ===========================================
# DEPLOYMENT
# ===========================================

# API key for deployment authentication
# Generate with: openssl rand -hex 32
QUANTUM_API_KEY=your-api-key-here

# Default deployment target URL
QUANTUM_FORGE_URL=http://forge:9000

# Alternative: Per-target configuration
# QUANTUM_DEPLOY_STAGING_URL=https://staging.example.com:9000
# QUANTUM_DEPLOY_STAGING_KEY=staging-api-key
# QUANTUM_DEPLOY_PRODUCTION_URL=https://prod.example.com:9000
# QUANTUM_DEPLOY_PRODUCTION_KEY=production-api-key

# ===========================================
# DEPLOY SERVICE (Forge VM)
# ===========================================

# Deploy service port (default: 9000)
DEPLOY_PORT=9000

# Deploy service host
DEPLOY_HOST=0.0.0.0

# Deploy service debug mode
DEPLOY_DEBUG=false

# Base URL for deployed apps (used in response URLs)
QUANTUM_BASE_URL=https://forge.domain.com

# Data directories
QUANTUM_APPS_DIR=/data/quantum/apps
QUANTUM_NGINX_DIR=/data/quantum/nginx
QUANTUM_REGISTRY_DIR=/data/quantum/registry

# Docker network name
QUANTUM_DOCKER_NETWORK=quantum-net

# Maximum upload size in bytes (default: 100MB)
QUANTUM_MAX_UPLOAD_SIZE=104857600

# ===========================================
# LLM (Ollama Backend)
# ===========================================

# Ollama API base URL (default: http://localhost:11434)
QUANTUM_LLM_BASE_URL=http://10.10.1.40:11434

# Default LLM model (default: phi3)
QUANTUM_LLM_DEFAULT_MODEL=phi3

# Default timeout for LLM requests in seconds (default: 60)
QUANTUM_LLM_TIMEOUT=60

# ===========================================
# SECURITY
# ===========================================

# Secret key for sessions (auto-generated if not set)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# QUANTUM_SECRET_KEY=your-secret-key-here

# CORS allowed origins (comma-separated)
# QUANTUM_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# LOGGING
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
QUANTUM_LOG_LEVEL=INFO

# Log file path
QUANTUM_LOG_FILE=quantum.log
